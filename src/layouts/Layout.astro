---
/**
 * Layout.astro - 主佈局元件
 * 包含 SEO Meta、GSAP 初始化、Header/Footer 插槽
 */
import "../styles/global.css";
import { siteConfig } from "../config/siteConfig";

interface Props {
  title?: string;
  description?: string;
  ogImage?: string;
}

const {
  title = siteConfig.seo.title,
  description = siteConfig.seo.description,
  ogImage = siteConfig.seo.ogImage,
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, siteConfig.url);
---

<!doctype html>
<html lang={siteConfig.locale}>
  <head>
    <!-- Meta -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />

    <!-- SEO -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(ogImage, siteConfig.url)} />
    <meta property="og:locale" content={siteConfig.locale} />
    <meta property="og:site_name" content={siteConfig.name} />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={new URL(ogImage, siteConfig.url)} />
    {
      siteConfig.seo.twitterHandle && (
        <meta name="twitter:site" content={siteConfig.seo.twitterHandle} />
      )
    }

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Noto+Sans+TC:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>

  <body class="min-h-screen flex flex-col antialiased">
    <!-- Header Slot -->
    <slot name="header">
      <header
        class="sticky top-0 z-50 bg-surface/80 backdrop-blur-md border-b border-border"
      >
        <div class="container-site flex items-center justify-between h-16">
          <a href="/" class="text-xl font-bold text-primary">
            {siteConfig.name}
          </a>

          <nav class="hidden md:flex items-center gap-8">
            {
              siteConfig.navigation.map((item) => (
                <a
                  href={item.href}
                  class="text-text-muted hover:text-primary transition-colors"
                >
                  {item.label}
                </a>
              ))
            }
          </nav>

          <!-- Mobile Menu Button -->
          <button
            type="button"
            class="md:hidden p-2"
            aria-label="開啟選單"
            id="mobile-menu-btn"
          >
            <svg
              class="w-6 h-6"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </button>
        </div>
      </header>
    </slot>

    <!-- Main Content -->
    <main class="flex-1">
      <slot />
    </main>

    <!-- Footer Slot -->
    <slot name="footer">
      <footer class="bg-text-main text-text-light py-12">
        <div class="container-site">
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-8">
            <!-- Brand -->
            <div>
              <h3 class="text-xl font-bold mb-4">{siteConfig.name}</h3>
              <p class="text-text-light/70 text-sm">
                {siteConfig.description}
              </p>
            </div>

            <!-- Footer Columns -->
            {
              siteConfig.footer.columns.map((column) => (
                <div>
                  <h4 class="font-semibold mb-4">{column.title}</h4>
                  <ul class="space-y-2">
                    {column.links.map((link) => (
                      <li>
                        <a
                          href={link.href}
                          class="text-text-light/70 hover:text-text-light transition-colors text-sm"
                        >
                          {link.label}
                        </a>
                      </li>
                    ))}
                  </ul>
                </div>
              ))
            }
          </div>

          <!-- Copyright -->
          <div
            class="border-t border-text-light/20 pt-8 text-center text-sm text-text-light/50"
          >
            {siteConfig.footer.copyright}
          </div>
        </div>
      </footer>
    </slot>

    <!-- GSAP ScrollTrigger Initialization -->
    <script>
      import "../scripts/animations";
    </script>
  </body>
</html>
